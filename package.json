{
  "name": "project-golem",
  "version": "9.0.0",
  "description": "Advanced AI Agent System with Web Dashboard (Cross-Platform)",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",

    "// --- Core Commands (核心指令) ---": "",
    "start": "node index.js",
    "dev": "nodemon index.js",
    
    "// --- Dashboard Commands (儀表板指令) ---": "",
    "dashboard": "cd web-dashboard && npm run dev",
    "dashboard:install": "cd web-dashboard && npm install",
    "dashboard:build": "cd web-dashboard && npm run build",
    
    "// --- Windows Integration (Windows 專用) ---": "",
    "win:setup": "setup.bat",
    "win:start": "setup.bat",
    
    "// --- Linux/macOS Integration (Unix 專用) ---": "",
    "unix:setup": "chmod +x setup.sh && ./setup.sh",
    "unix:start": "./setup.sh",
    
    "// --- Automation Hooks (自動化鉤子) ---": "",
    "postinstall": "echo [INFO] Auto-installing Dashboard dependencies... && npm run dashboard:install && echo [OK] Dashboard ready."
  },
  "keywords": [
    "ai",
    "gemini",
    "puppeteer",
    "agent",
    "automation",
    "telegram-bot",
    "discord-bot"
  ],
  "author": "Project Golem Team",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "dotenv": "^16.3.1",
    "puppeteer": "^21.5.0",
    "node-telegram-bot-api": "^0.64.0",
    "discord.js": "^14.14.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
